<div class="modal" id="deleteEvent-{{ event.id }}">
    <div class="modal-background"></div>

    <div class="modal-card">
        <section class="modal-card-body">
            <p>Vous êtes sûr(e) de supprimer l'événement <strong>{{ event.title }}</strong> ?</p>
        </section>

        <footer class="modal-card-foot">
            <form action="{{ path('events.delete', { id: event.id }) }}" method="post">
                <input type="hidden" name="_method" value="DELETE" />
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}" />

                <button class="button is-danger">Oui</button>
                <button class="button is-link" onclick="closeModal('#deleteEvent-{{ event.id }}', event)">Non</button>
            </form>
        </footer>
    </div>
</div>