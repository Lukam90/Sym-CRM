<div class="modal" id="formModal">
    <div class="modal-background"></div>

    <div class="modal-card">
        {% include "modals/form_header.html.twig" %}

        <form action="#" method="post" id="modalForm">
            <input type="hidden" name="_token" id="formToken" value="#" />

            <section class="modal-card-body">
                <div class="field">
                    <label for="name" class="label">Nom (*)</label>

                    <div class="control">
                        <input type="text" name="name" id="name" class="input" placeholder="Ex : Equipe Jaune" required />
                    </div>
                </div>
            </section>

            {% include "modals/form_footer.html.twig" %}
        </form>
    </div>
</div>