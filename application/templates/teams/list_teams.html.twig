{% extends 'base.html.twig' %}

{% block title "Liste des équipes" %}

{% block body %}
<h2 class="title">{{ title }}</h2>

<div class="block">
    <a href="{{ path('add_team') }}" class="button is-link">
        <i class="fa fa-plus"></i> &nbsp; Nouvelle équipe
    </a>
</div>

<div class="table-container">
    <table class="table is-striped is-hoverable is-fullwidth">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Description</th>
                <th class="is-narrow"></th>
                <th class="is-narrow"></th>
                <th class="is-narrow"></th>
            </tr>
        </thead>

        <tbody>
            {% for index in 0..10 %}
            <tr>
                <td>{{ index }}</td>
                <td>Nom</td>
                <td>Description</td>

                <td>
                    <a href="{# path('profile', { 'id' : team.id }) #}" class="button is-info">
                        <i class="fa fa-eye"></i>
                    </a>
                </td>
                    
                <td>
                    <a href="{# path('edit_team', { 'id' : team.id }) #}" class="button is-success">
                        <i class="fa fa-pencil"></i>
                    </a>
                </td>
                    
                <td>
                    <a href="#deleteTeam" class="button is-danger" onclick="openModal('deleteTeam')">
                        <i class="fa fa-times"></i>
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% include "teams/delete_team.html.twig" %}

{% endblock %}
