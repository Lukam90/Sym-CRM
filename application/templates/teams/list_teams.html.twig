{% extends 'base.html.twig' %}

{% block title "Liste des équipes" %}

{% block scripts %}
<script>
const addTeam = (button) => {
    $("#addToken").value = button.dataset.token;

    openModal("#addModal");
}
</script>
{% endblock %}

{% block body %}
<h2 class="title is-2">{{ title }}</h2>

{% include "partials/messages.html.twig" %}

<div class="block">
    <button
        class="button is-link"
        data-token="{{ csrf_token('new') }}"
        onclick="addTeam(this);">
        <i class="fa fa-plus"></i> &nbsp; Nouvelle équipe
    </button>
</div>

<div class="table-container">
    <table class="table is-striped is-hoverable is-fullwidth">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Membres</th>
                <th class="is-narrow"></th>
                <th class="is-narrow"></th>
            </tr>
        </thead>

        <tbody>
            {% for team in teams %}
            <tr>
                <td>{{ team.id }}</td>
                <td>{{ team.name }}</td>
                <td>?</td>

                <td>
                    <a href="{{ path('teams.edit', { 'id' : team.id }) }}" class="button is-success">
                        <i class="fa fa-pencil"></i>
                    </a>
                </td>

                <td>
                    <button
                        class="button is-danger"
                        data-name="l'équipe"
                        data-type="teams"
                        data-id="{{ team.id }}"
                        data-title="{{ team.name }}"
                        data-token="{{ csrf_token('delete' ~ team.id) }}"
                        onclick="deleteModal(this)">
                        <i class="fa fa-times"></i>
                    </button>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5">Aucune équipe n'a été ajoutée.</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{# Modals #}

{% include "partials/delete.html.twig" %}

{% include "teams/add_team.html.twig" %}

{% endblock %}
