{% extends 'base.html.twig' %}

{% block title "Liste des contacts" %}

{% block scripts %}
<script src="{{ asset('js/components/_contacts.js') }}" type="module"></script>
<script src="{{ asset('js/forms/contacts.js') }}"></script>
{% endblock %}

{% block body %}
<h2 class="title is-2">Liste des contacts</h2>

{% include "partials/messages.html.twig" %}

<div class="block">
    <button
        id="newContact"
        class="button is-link"
        data-token="{{ csrf_token('new') }}"
        onclick="addModal(this);">
        <i class="fa fa-plus"></i> &nbsp; Nouvel contact
    </button>
</div>

<div class="block">
    <form action="{{ path('contacts.search') }}" id="searchForm">
        <div class="field">
            <input type="search" name="filter" class="input width-25" placeholder="Ex: Jean Dupont" />

            <button type="submit" class="button is-link ml-10">
                <i class="fa fa-search" aria-hidden="true"></i>
            </button>

            <button class="button is-success ml-10" onclick="resetPage();">&#8634;</button>
        </div>
    </form>
</div>

<div class="table-container">
    <table class="table is-striped is-hoverable is-fullwidth">
        <thead>
            <tr>
                <th>
                    # &nbsp; <sort-content table="contacts" column="id"></sort-content>
                </th>

                <th>
                    Nom &nbsp; <sort-content table="contacts" column="fullName"></sort-content>
                </th>
                
                <th>
                    Type &nbsp; <sort-content table="contacts" column="type"></sort-content>
                </th>
                
                <th>
                    Rôle &nbsp; <sort-content table="contacts" column="role"></sort-content>
                </th>
                
                <th>Coordonnées</th>

                <th class="is-narrow"></th>
                <th class="is-narrow"></th>
            </tr>
        </thead>

        <tbody>
            {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.fullName }}</td>
                <td>{{ contact.type }}</td>
                <td>{{ contact.role }}</td>

                <td>
                    {#<i class="fa fa-map-marker"></i> &nbsp; {{ contact.address }}<br />
                    <i class="fa fa-at"></i> &nbsp; {{ contact.email }}<br />
                    <i class="fa fa-phone"></i> &nbsp; {{ contact.phone }}<br />

                    {% if contact.website %}
                    <i class="fa fa-globe"></i> &nbsp; {{ contact.website }}
                    {% endif %}#}

                    <contact-details contact="{{ contact }}"></contact-details>
                </td>
                    
                <td>
                    <button
                        class="button is-success"
                        data-contact="{{ contact }}"
                        data-token="{{ csrf_token('edit') }}"
                        onclick="editModal(this)">
                        <i class="fa fa-pencil"></i>
                    </button>
                </td>
                    
                <td>
                    <button
                        class="button is-danger"
                        data-name="{{ contact.fullName }}"
                        data-token="{{ csrf_token('delete') }}"
                        onclick="deleteModal(this)">
                        <i class="fa fa-times"></i>
                    </button>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="7">Aucun contact n'a été ajouté.</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{# Modals #}

{% include "contacts/delete_contact.html.twig" %}

{% include "contacts/form_contact.html.twig" %}

{% endblock %}