                                <td class="is-narrow">{{ event.date | date("d/m/Y") }}</td>
                                <td class="is-narrow">{{ event.date | date("H:i") }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
