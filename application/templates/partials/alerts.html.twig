{% if app.flashes %}
<div class="block">
    {% for message in app.flashes('success') %}
    <div class="notification is-success">
        <button class="delete"></button>
        {{ message }}
    </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
    <div class="notification is-danger">
        <button class="delete"></button>
        {{ message }}
    </div>
    {% endfor %}
</div>
{% endif %}