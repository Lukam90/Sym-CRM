<div class="modal" id="delete">
    <div class="modal-background"></div>

    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title" id="delete-title"></p>

            <button class="delete" aria-label="close" onclick="close('#delete')"></button>
        </header>

        <section class="modal-card-body">
            {% block modal %}{% endblock %}
        </section>

        <footer class="modal-card-foot">
            <form action="#" method="post" id="delete-form">
                <input type="hidden" name="_method" value="DELETE" />
                <input type="hidden" name="_token" id="delete-token" value="#" />

                <button class="button is-danger">Oui</button>
                <button class="button is-link" onclick="close('#delete', this)">Non</button>
            </form>
        </footer>
    </div>
</div>