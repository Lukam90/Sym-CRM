{% set path = "pages/users/" %}

{% extends 'forms/login_form.html.twig' %}

{% block scripts %}
<script src="{{ asset('js/helpers.js') }}"></script>
<script src="{{ asset('js/data/users.js') }}"></script>
{% endblock %}

{% block login %}
<form action="{{ path('login') }}" class="box">
    <input type="hidden" name="_token" id="login-token" value="{{ csrf_token('login') }}" />

    <div class="field">
        <label for="email" class="label">Adresse e-mail</label>

        <div class="control has-icons-left">
            <input type="email" id="login-email" class="input" placeholder="e.g. rene.dupont@gmail.com" required />

            <span class="icon is-small is-left">
                <i class="fa fa-envelope"></i>
            </span>
        </div>
    </div>

    <div class="field">
        <label for="password" class="label">Mot de passe</label>

        <div class="control has-icons-left">
            <input type="password" id="login-password" class="input" placeholder="*******" required />

            <span class="icon is-small is-left">
                <i class="fa fa-lock"></i>
            </span>
        </div>
    </div>

    <div class="field">
        <button class="button is-success">Se connecter</button>
    </div>
</form>

<hr />

<div class="block">
    <a href="#register" token="{{ csrf_token('register') }}" onclick="register(this)">S'inscrire</a>
</div>

<div class="block">
    <a href="#reset" token="{{ csrf_token('reset') }}" onclick="reset(this)">Mot de passe oubli√© ?</a>
</div>

{# Modals #}

{% include path ~ "register.html.twig" %}

{% include path ~ "reset.html.twig" %}

{% endblock %}
